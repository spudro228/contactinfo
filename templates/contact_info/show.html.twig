{% extends 'base.html.twig' %}

{% block title %}ContactInfo{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .show_button_list{
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .content__items{
            flex-direction: column;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>ContactInfo</h1>

    <div class="content">
        <div class="content__items"><table class="table pure-table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact_info.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact_info.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ contact_info.mail }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ contact_info.phoneNumber|phone_number_format('NATIONAL') }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact_info.message }}</td>
            </tr>
            <tr>
                <th>IpAddress</th>
                <td>{{ contact_info.ipAddress }}</td>
            </tr>
            </tbody>
        </table>

        <div class="show_button_list">
            <a class="pure-button" href="{{ path('contact_info_index') }}">Back to list</a>
            <a class="pure-button pure-button-primary" href="{{ path('contact_info_edit', {'id': contact_info.id}) }}">Edit</a>
            {{ include('contact_info/_delete_form.html.twig') }}
        </div></div>

    </div>
{% endblock %}
