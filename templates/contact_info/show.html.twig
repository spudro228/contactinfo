{% extends 'base.html.twig' %}

{% block title %}ContactInfo{% endblock %}

{% block body %}
    <h1>ContactInfo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact_info.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact_info.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ contact_info.mail }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ contact_info.phoneNumber|phone_number_format('NATIONAL') }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact_info.message }}</td>
            </tr>
            <tr>
                <th>IpAddress</th>
                <td>{{ contact_info.ipAddress }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_info_index') }}">back to list</a>

    <a href="{{ path('contact_info_edit', {'id': contact_info.id}) }}">edit</a>

    {{ include('contact_info/_delete_form.html.twig') }}
{% endblock %}
